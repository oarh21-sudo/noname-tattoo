---
import Layout from '../layouts/Layout.astro';
import { portfolioHighlights } from '../data/profile';
---

<Layout>
  <main class="page">
    <section class="section-head">
      <h1>Proyectos</h1>
      <p>Selecci√≥n curada de proyectos y obras recientes. Contacta para reservas y encargos.</p>
    </section>

    <section class="projects__grid">
      {portfolioHighlights.map(({ title, description, medium, image }) => (
        <article class="project-card">
          <div class="project-thumb">
            <img src={image} alt={title} loading="lazy" />
          </div>
          <h3>{title}</h3>
          <p>{description}</p>
          <span class="project-medium">{medium}</span>
        </article>
      ))}
    </section>
  </main>
</Layout>

<style>
  .page { padding: 2rem; }
  .section-head { text-align: center; margin-bottom: 2rem; }
  .projects__grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(240px, 1fr)); gap: 1.25rem; }
  .project-card { background: #070707; padding: 1rem; border-radius: 12px; border: 1px solid rgba(255,255,255,0.06); }
  .project-thumb img { width: 100%; height: 160px; object-fit: cover; border-radius: 8px; }
  .project-medium { display: inline-block; margin-top: .5rem; color: rgba(255,255,255,0.6); font-size: .9rem; }
</style>